<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_process"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingEnd="16dp"
        android:ellipsize="start"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2*8" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingEnd="16dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_process"
        tools:text="16" />

    <LinearLayout
        android:id="@+id/ll_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/btn00"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_normal"
            android:text="00" />

        <Button
            android:id="@+id/btn0"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_normal"
            android:text="0" />

        <Button
            android:id="@+id/btn_point"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_normal"
            android:text="." />

        <Button
            android:id="@+id/btn_equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_orange"
            android:text="="
            android:textColor="@color/white"
            android:textSize="33sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ll_line1"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/btn1"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_normal"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_normal"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_normal"
            android:text="3" />

        <Button
            android:id="@+id/btn_add"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_gray"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ll_line2"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/btn4"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_normal"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_normal"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_normal"
            android:text="6" />

        <Button
            android:id="@+id/btn_minus"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_gray"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ll_line3"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/btn7"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_normal"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_normal"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_normal"
            android:text="9" />

        <Button
            android:id="@+id/btn_multiply"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_gray"
            android:text="*" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_line5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ll_line4"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/btn"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_gray"
            android:text="C" />

        <Button
            android:id="@+id/btn_percentage"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_gray"
            android:text="%" />

        <ImageButton
            android:id="@+id/btn_back"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_gray"
            android:src="@mipmap/back" />

        <Button
            android:id="@+id/btn_div"
            style="@style/tv_black_33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/selector_btn_gray"
            android:text="รท" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

